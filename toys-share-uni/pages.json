{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/offerSharing/offerSharing",	//报价分享
			"aliasPath":"/offerSharing",
			"name":"offerSharing",
			"style": {
				"navigationBarTitleText": "报价分享",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/offerSharing/offerDetail",	//报价详情
			"aliasPath":"/offerDetail/:pid/:id",
			"name":"offerDetail",
			"style": {
				"navigationBarTitleText": "产品详情",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/offerSharing/offerContact",	//报价联系方式
			"aliasPath":"/offerContact",
			"name":"offerContact",
			"style": {
				"navigationBarTitleText": "联系方式",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/erpProduct/home",	//分享展厅
			"aliasPath":"/home",
			"style": {
				"navigationBarTitleText": "home",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/erpProduct/productDetails",	//产品详情
			"aliasPath":"/productDetails",
			"style": {
				"navigationBarTitleText": "productDetails",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/supplierSharing/supplierSharing",	//厂商分享首页
			"aliasPath":"/supplierSharing",
			"name":"supplierSharing",
			"style": {
				"navigationBarTitleText": "厂商分享",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/supplierSharing/supplierSharingList",	//厂商分享产品列表
			"aliasPath":"/supplierSharingList",
			"name":"supplierSharingList",
			"style": {
				"navigationBarTitleText": "厂商分享",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/supplierSharing/supplierSharingContact",	//厂商分享联系方式
			"aliasPath":"/supplierSharingContact",
			"name":"supplierSharingContact",
			"style": {
				"navigationBarTitleText": "厂商分享",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/supplierSharing/supplierSharingDetail",	//厂商分享详情
			"aliasPath":"/supplierSharingDetail",
			"name":"supplierSharingDetail",
			"style": {
				"navigationBarTitleText": "厂商分享",
				"app-plus": {
					"titleNView": false //禁用原生导航栏
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"condition" : { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "", //模式名称
				"path": "", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
